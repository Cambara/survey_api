{
  "env": {
      "browser": true,
      "es2021": true
  },
  "extends": [
      "standard",
      "plugin:@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module",
      "project": "./tsconfig.json"
  },
  "plugins": [
      "@typescript-eslint"
  ],
  "rules": {
      "camelcase": "off",
      "no-useless-constructor": "off",
      "no-empty-interface": "off",
      "@typescript-eslint/no-explicit-any": "off"
  }
}
